<% @title="WC? | Cookbooks" %>

<h1 align="center">List of Cookbooks</h1>
<h4 align="center"><%= will_paginate @cookbooks %></h4>
<% if !current_user.the_admin? %>
	<%= button_to "Create Cookbook", new_cookbook_path, method: :get, class: "btn btn-primary col-md-12" %>
<% end %>

<% @cookbooks.all.each do |book| %>
	<div class="col-md-3" align="center">
		<div class="ind-book"><br>
			<%= image_tag(book.book_cover.url, :class => "bookcover-resize") %><br>
			<h3><%= link_to book.title, cookbook_path(book) %></h3>
			Recipes Available: <%= book.recipes.count %><br><br>
			<% if current_user == book.user || current_user.the_admin? %>
				<% if current_user == book.user %>	
					<%= button_to "Edit", edit_cookbook_path(book), method: :get, class: 'btn btn-warning' %>
				<% end %>
				<%= button_to "Del", cookbook_path(book), method: :delete, class: 'btn btn-danger', remote: true %>
				<%= button_to "See", cookbook_path(book), method: :get, class: 'btn btn-success' %>
			<% end %>
		</div>
	</div>
<% end %>


