<div align="center">
    <%= form_for @user do |f| %>
        <%= f.label :email %> :
        <%= f.text_field :email %><br><br>
        <%= f.label :username %> :
        <%= f.text_field :username %><br><br>
        <%= f.label :password %> :
        <%= f.password_field :password %><br><br>
        <%= f.label :password_confirmation %> :
        <%= f.password_field :password_confirmation %><br><br>
        <%= f.submit :value => "Sign Up", class:"btn btn-primary col-md-12" %>
    <% end %>
</div>